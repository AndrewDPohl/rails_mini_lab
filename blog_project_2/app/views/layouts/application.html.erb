<!DOCTYPE html>
<html>
<head>
  <title>BlogProject2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="main_nav">
    <h2 class="main_logo">Burning Up In Speed</h2>
    <% if current_user %>
      <button class="nav_button">
        <%= link_to "Logout", "/logout", method: "delete" %>
      </button>
      <button class="nav_button">
        <%= link_to 'New Article', new_article_path, :method => :get %>
      </button>
      <button class="nav_button">
        <%= link_to 'Contact', contact_path, :method => :get %>
      </button>
      <button class="nav_button">
        <%= link_to 'About', about_path, :method => :get %>
      </button>
      <button class="nav_button">
        <%= link_to 'Home', articles_path, :method => :get %>
      </button>
    <% else %>
      <button class="nav_button">
        <%= link_to "Sign Up", sign_up_path, :method => :get %>
      </button>
      <button class="nav_button">
        <%= link_to "Log In", login_path, :method => :get %>
      </button>
    <% end %>
  </div>

  <p class="sub_title">The Endless Drags Of A Death Rock Boy</p>

<%= yield %>

</body>
</html>
